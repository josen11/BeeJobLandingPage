---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'

// Content
// - SEO
const SEO = {
	title: 'Talento Local | Ponte en Contacto con Nosotros',
	description:
		'¿Tienes preguntas o necesitas ayuda? Contacta con Talento Local hoy mismo para soporte, consultas o comentarios. Nuestro equipo está aquí para ayudarte a sacar el máximo provecho de tu experiencia con Talento Local.'
}
// - Page Header
const header = {
	title: 'Obtén Respuestas a Tus Preguntas en <strong>Talento Local</strong>.',
	text: "Ya sea que tengas una pregunta, necesites soporte o simplemente quieras compartir tus comentarios, estamos aquí para escucharte. Ponte en contacto con nosotros y te responderemos lo antes posible."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<CTA />
</Layout>
