---
// Blog Index Page
// ------------
// Description: The blog index page.

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../components/blocks/blog/BlogPosts.astro'

// Data
import { getCollection } from 'astro:content'

// Content
// - SEO
const SEO = {
	title: 'Talento local | Noticias y Actualizaciones Recientes',
	description:
		"Explora las últimas noticias de Talento Local, diseñadas para mejorar la empleabilidad, garantizar la transparencia en los procesos y facilitar la integración con tus herramientas favoritas. Únete a miles de usuarios satisfechos y transforma tu gestión laboral con Talento Local hoy mismo."
}
// - Page Header
const header = {
	title: 'El Blog de <strong>Talento Local</strong>. Consejos, Actualizaciones e Historias',
	text: 'Mantente informado y productivo. Todas las novedades del mundo de Talento Local.'
}

const allPosts = await getCollection('blog')
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<BlogPosts data={allPosts} />
</Layout>
